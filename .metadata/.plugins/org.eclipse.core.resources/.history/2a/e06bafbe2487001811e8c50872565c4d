package cards;

import java.util.ArrayList;

public class Deck {
	private ArrayList<NumberCard> numberCards;
	private ArrayList<UNOCard> UNOCards;
	
	//Initializes new deck of 108 cards
	public Deck() {
		// TODO Auto-generated constructor stub
		numberCards = new ArrayList<NumberCard>();
		UNOCards = new ArrayList<UNOCard>();
		
		numberCards.add(new NumberCard("green", "Green 0", 0));
		numberCards.add(new NumberCard("green", "Green 1", 1));
		numberCards.add(new NumberCard("green", "Green 2", 2));
		numberCards.add(new NumberCard("green", "Green 3", 3));
		numberCards.add(new NumberCard("green", "Green 4", 4));
	}

}
